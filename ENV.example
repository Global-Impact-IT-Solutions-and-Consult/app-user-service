# Server Configuration
PORT=3000
API_PREFIX=api
NODE_ENV=development

# PostgreSQL Configuration
# Note: Using port 5433 to avoid conflict with local PostgreSQL on 5432
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=user-service

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Encryption Key (for API keys and webhook secrets)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Email Configuration (for OTP sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@userservice.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Receipt Service Configuration
RECEIPT_SERVICE_URL=http://localhost:3001

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
